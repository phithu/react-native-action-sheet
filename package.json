{
  "name": "@npt/react-native-action-sheet",
  "version": "3.9.0",
  "description": "A cross-platform ActionSheet for React Native",
  "react-native": "src/index.ts",
  "main": "src/index.ts",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "/src",
    "/lib"
  ],
  "scripts": {
    "prepare": "bob build",
    "build": "bob build",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "fmt": "prettier --write \"{src,example}/**/*.{ts,tsx}\"",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phithu/react-native-action-sheet.git"
  },
  "keywords": [
    "expo",
    "react-native",
    "action-sheet"
  ],
  "author": "Jesse Ruder <jesse@sixfivezero.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phithu/react-native-action-sheet/issues"
  },
  "homepage": "https://github.com/phithu/react-native-action-sheet",
  "devDependencies": {
    "@react-native-community/bob": "^0.17.1",
    "@react-native-community/eslint-config": "^3.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/react": "^17.0.15",
    "@types/react-native": "^0.64.12",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-native": "0.64.2",
    "semantic-release": "^17.4.4",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": "17.0.2"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "typescript"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "yarn fmt",
      "git add"
    ]
  }
}
